    <script>
          let textAreaContact = document.getElementById('textAreaContact');
          let labelTextareaContact = document.getElementById('labelTextareaContact');

          textAreaContact.addEventListener('input', event => {
          labelTextareaContact.innerHTML = `0 / ${textAreaContact.getAttribute("maxlength")}`;
          const target = event.currentTarget;
          const maxLength = target.getAttribute("maxlength");
          const currentLength = target.value.length;

          if (currentLength >= maxLength ) {
              labelTextareaContact.innerHTML = `${currentLength} / ${maxLength}`;
              labelTextareaContact.style.color = 'red';
              return
          }
          labelTextareaContact.style.color = "#BABCBF";
          labelTextareaContact.innerHTML = `${currentLength} / ${maxLength}`;

          })
