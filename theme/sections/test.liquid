<div class="main">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'block-item' -%}
            <div {% if block.settings.reverse == true %}
                class="about"
                {% else %}
                class="about_reverse"
                {% endif %}
             >
                <div class="about_image">
                    {%- if block.settings.image != blank -%}
                        <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{block.settings.image.alt}}">
                    {%- else -%}
                        {{ 'image' | placeholder_svg_tag }}
                    {%- endif -%}
                </div>
                <div class="content">
                    <h2 class="title">{{block.settings.title1}}</h2>
                    <h4 class="sub_title">{{block.settings.heading1}}</h4>
                    <p class="main_content">{{block.settings.main_content1}}</p>
                    <h2 class="title">{{block.settings.title2}}</h2>
                    <h4 class="sub_title">{{block.settings.heading2}}</h4>
                    <p class="main_content">{{block.settings.main_content2}}</p>
                    <h2 class="title">{{block.settings.title3}}</h2>
                    <h4 class="sub_title">{{block.settings.heading3}}</h4>
                    <p class="main_content">{{block.settings.main_content3}}</p>
                    <ul class="content_list">
                        {{block.settings.content_list}}
                    </ul>
                </div>
            </div>
        {%- endcase -%}
    {%- endfor -%}
</div>


