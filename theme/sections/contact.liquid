<div class="container">
  <div class="contact">
    <div class="contact_form">
      <div class="title">
        <h1>{{section.settings.title}}</h1>
        <p>{{section.settings.sub-title}}</p>
      </div>
      <div class="form">
        {%- form 'contact' -%}
        <div class="contact_email">
          <div class="email">
            <p>Your E-mail address *</p>
            <input type="email" required name="contact[email]">
          </div>
          <div class="name">
            <p>Your name *</p>
            <input type="text" required name="contact[full_name]">
          </div>
        </div>
        <div class="phone">
          <p>Your Phone *</p>
          <input type="text" required name="contact[phone]">
        </div>
        <div class="comment">
          <div class="comment_title">
            <p>Your Comment *</p>
            <label id="labelTextareaContact" for="textAreaContact"></label>
          </div>
            <textarea id="textAreaContact" required name="contact[body]" maxlength="12"></textarea>
        </div>
        <button type="submit">Send</button>
        {%- endform -%}  
      </div>
    </div>
